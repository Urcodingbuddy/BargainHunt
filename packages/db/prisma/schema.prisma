generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                    String   @id @default(cuid())
  uniqueId              String?   @unique
  title                 String
  normalizedTitle       String
  category              String
  brand                 String
  image                 String
  amazonPrice           String
  flipkartPrice         String
  amazonReview          String?
  flipkartReview        String?
  amazonLink            String
  flipkartLink          String
  flipkartRating        String?
  amazonRating          String?
  amazonOriginalPrice   String?
  flipkartOriginalPrice String?
  availability          String?
  boughtInLastMonth     String?
  source                String
  matchScore            String
  LastUpdated           DateTime @default(now())
}

model Guide {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String
  category    String
  date        DateTime
  image       String
  content     String
  author      String
  readTime    String
}

model Article {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String
  category    String
  date        DateTime
  image       String
  content     String
  author      String
  readTime    String
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  auth_type AuthType
  phone     String?  @unique
  imageUrl  String
  createdAt DateTime @default(now())
}

enum AuthType {
  GOOGLE
  GITHUB
}
